@model WebApp.Models.PagerVM;
<div class="container">
    @if (Model.TotalPages > 0)
    {
    <ul class="pagination justify-content-center">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="Dieudong" asp-action="Index" asp-route-pageTeoti="1"> &lt;&lt; </a>
            </li>

            <li class="page-item">
                <a class="page-link" asp-controller="Dieudong" asp-action="Index" asp-route-pageTeoti="@(Model.CurrentPage -1)"> &lt; </a>
            </li>
        }


        @for (var _page = Model.StartPage; _page <= Model.EndPage; _page++)
        {
            <li class="page-item @(_page == Model.CurrentPage ? "active" :"")">
                <a class="page-link" asp-controller="Dieudong" asp-action="Index" asp-route-pageTeoti="@_page"> @_page </a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="Dieudong" asp-action="Index" asp-route-pageTeoti="@(Model.CurrentPage +1)"> > </a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-controller="Dieudong" asp-action="Index" asp-route-pageTeoti="@(Model.TotalPages)"> >> </a>
            </li>
            @*<li>
                <form>
                    &nbsp;<input type="text" value="5" />
                </form>
            </li>*@
        }
    </ul>
        
    }
</div>